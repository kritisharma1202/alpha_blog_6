<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-sm-2 text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-sm-2 text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :category, class: "col-sm-2 text-light" %>
          <div class="col-sm-10">
            <%#= f.collection_select(:category_ids, Category.all, :id, :name) %>
            <%= f.collection_select :category_ids, Category.all, :id, :name, {prompt: "Select Categories (can be Empty or Multiple)"}, {multiple: true, size: 3, class: "custom-select shadow rounded"} %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div> 
    <%= link_to '[Cancel & Return to Listing Page]', articles_path, class: "text-info" %>
  </div>
</div>


