<h1 class="text-center mt4">Log in</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">      
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-sm-2 text-light" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your Email Address" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-sm-2 text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter your password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Login", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div> 
    <%= link_to '[Cancel & Return to Listing Page]', articles_path, class: "text-info" %>
  </div>
</div>


